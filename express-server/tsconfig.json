{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // specify the output directory
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"], // include all TypeScript files from 'src'
  "exclude": ["node_modules"] // exclude the 'node_modules' folder
}
